<section class="post">
    <div class="title">
        {{#if logged_in}}
        <h2><a href="/post/{{id}}">{{title}}</a></h2>
        <h4>Posted by {{user.name}} on {{format_date date_created}}</h4>
        {{else}}
        <h2><a href="/login">{{title}}</a></h2>
        <h4>Posted by {{user.name}} on {{format_date date_created}}</h4>
        {{/if}}
    </div>
    <div class="content">
        <p>
            {{content}}
        </p>
    </div>
</section>